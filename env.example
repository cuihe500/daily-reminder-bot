# Daily Reminder Bot - Environment Variables Example
# Copy this file to .env and fill in your values
# Usage: docker-compose --env-file .env up -d

# ============================================
# Telegram Configuration (REQUIRED)
# ============================================
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_API_ENDPOINT=https://api.telegram.org

# ============================================
# QWeather Configuration (REQUIRED)
# ============================================
# Authentication mode: "jwt" (recommended) or "api_key"
QWEATHER_AUTH_MODE=jwt

# For JWT mode (recommended):
# Private key in PEM format (can be base64 encoded for single line)
# Leave empty to auto-generate on first run
QWEATHER_PRIVATE_KEY=
# Credential ID from QWeather console
QWEATHER_KEY_ID=your_key_id_here
# Project ID from QWeather console
QWEATHER_PROJECT_ID=your_project_id_here

# For api_key mode (legacy):
QWEATHER_API_KEY=

# API Host from QWeather console (REQUIRED)
QWEATHER_BASE_URL=https://your-api-host.qweatherapi.com

# ============================================
# OpenAI Configuration (Optional)
# ============================================
OPENAI_ENABLED=false
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=800
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30
OPENAI_MAX_RETRIES=3

# ============================================
# Holiday API Configuration (Optional)
# ============================================
HOLIDAY_API_URL=https://www.jiejiariapi.com
HOLIDAY_CACHE_TTL=86400

# ============================================
# Database Configuration
# ============================================
# "sqlite" or "mysql"
DATABASE_TYPE=sqlite
# SQLite path (only for sqlite type)
DATABASE_PATH=/app/data/bot.db
# MySQL settings (only for mysql type)
DATABASE_HOST=mysql
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=
DATABASE_NAME=daily_reminder_bot
DATABASE_CHARSET=utf8mb4

# ============================================
# Scheduler Configuration
# ============================================
SCHEDULER_TIMEZONE=Asia/Shanghai

# ============================================
# Logger Configuration
# ============================================
# Log level: debug, info, warn, error
LOGGER_LEVEL=info
# Log format: console, json
LOGGER_FORMAT=json
